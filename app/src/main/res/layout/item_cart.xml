<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/cart_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product_imagee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Product image"
                android:scaleType="centerCrop"
                android:src="@drawable/image" />

            <!-- Product Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product_namee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nike Air Jordan"
                    android:textColor="#06004F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!-- Product Color -->
                    <TextView
                        android:id="@+id/product_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="● Orange |"
                        android:textColor="#9906004F"
                        android:textSize="14sp" />

                    <!-- Product Size -->
                    <TextView
                        android:id="@+id/product_sizee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: 40"
                        android:textColor="#9906004F"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Product Price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Price Text -->
                    <TextView
                        android:id="@+id/product_pricee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3,500"
                        android:textColor="#06004F"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quantity Controls and Delete Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/delete_buttone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Delete product" />

                <!-- Quantity Selector -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkout_button_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <!-- Minus Button -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_dec_item_cart"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_subtract_circle_minus_remove" />

                    <!-- Quantity Text -->
                    <TextView
                        android:id="@+id/tv_counter_item_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <!-- Plus Button -->
                    <ImageButton
                        android:id="@+id/btn_inc_item_cart"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Increase quantity"
                        android:src="@drawable/icon_pluscircle" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
